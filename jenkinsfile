pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                sh 'mvn clean install -DskipTests'
            }
        }
        stage('Build Docker Image') {
            steps {
                sh 'sudo docker build -t pet-clinic .' //build the docker image
            }
        }
        stage('Push Docker Image') {  
            steps {
                // login to ecr registry 
                sh 'aws ecr get-login-password --region us-east-1 | docker login --username AWS --password-stdin 539825459983.dkr.ecr.us-east-1.amazonaws.com'
                // tag the docker image
                sh 'sudo docker tag pet-clinic:latest 539825459983.dkr.ecr.us-east-1.amazonaws.com/pet-clinic:latest'
                // push the docker image to the registry
                sh 'sudo docker push 539825459983.dkr.ecr.us-east-1.amazonaws.com/pet-clinic:latest'   //push the docker image to the registry
            }
        }
        stage('Archive') {
            steps {
                archiveArtifacts artifacts: 'build/libs/*.jar', fingerprint: true
            }                   
        }
    }
}

