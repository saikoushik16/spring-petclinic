pipeline {
    agent any
environment {
        // AWS related environment variables
        AWS_REGION = 'us-east-1'  // Change this to your region
        AWS_ACCOUNT_ID = '539825459983'  // Replace with your AWS Account ID
        ECR_REPO_NAME = 'pet-clinic'  // Replace with your ECR repository name
        IMAGE_NAME = 'pet-clinic'
        AWS_CREDENTIALS_ID = 'aws'  // Replace with your Jenkins AWS credentials ID
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                sh 'mvn clean install -DskipTests'
            }
        }
        stage('Build Docker Image') {
            steps {
                sh 'docker build -t  ${IMAGE_NAME} .' //build the docker image
            }
        }
        stage('Authenticate and Push to AWS ECR') {
            steps {
                script {
                    // Authenticate with AWS using AWS CLI and the credentials stored in Jenkins
                    withCredentials([aws(credentialsId: AWS_CREDENTIALS_ID)]) {
                        // Log in to AWS ECR
                        sh "aws ecr get-login-password --region ${AWS_REGION} | docker login --username AWS --password-stdin ${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com"

                        // Tag Docker image with ECR repository URI
                        sh "docker tag ${IMAGE_NAME}:latest ${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/${ECR_REPO_NAME}:latest"

                        // Push the image to AWS ECR
                        sh "docker push ${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/${ECR_REPO_NAME}:latest"
                    }
                }
            }
        }
        //stage('Push Docker Image') {  
        //    steps {
        //        sh 'aws configure set aws_access_key_id AKIAX3MA22MH4WZHYE5P'
         //       sh 'aws configure set aws_secret_access_key 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'
         //       sh 'aws configure set region us-east-1'
                // login to ecr registry 
           //     sh 'aws ecr get-login-password --region us-east-1 | docker login --username AWS --password-stdin 539825459983.dkr.ecr.us-east-1.amazonaws.com'
                // tag the docker image
             //   sh 'docker tag pet-clinic:latest 539825459983.dkr.ecr.us-east-1.amazonaws.com/pet-clinic:latest'
                // push the docker image to the registry
               // sh 'docker push 539825459983.dkr.ecr.us-east-1.amazonaws.com/pet-clinic:latest'   //push the docker image to the registry
            //}
        //}
        stage('Archive') {
            steps {
                archiveArtifacts artifacts: 'build/libs/*.jar', fingerprint: true
            }                   
        }
    }
}

