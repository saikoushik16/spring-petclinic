pipeline {
    agent any

    parameters {
        booleanParam(name: 'RUN_SONAR_SCAN', defaultValue: true, description: 'Run SonarQube Scan?')
    }

    environment {
        AWS_REGION = 'us-east-1'
        AWS_ACCOUNT_ID = '730115957740'
        ECR_REPO_NAME = 'docker-project'
        IMAGE_NAME = 'pet-clinic'
        AWS_CREDENTIALS_ID = 'AWS'

        SONARQUBE_ENV = 'SonarQube'
        SONAR_PROJECT_KEY = 'spring-petclinic'
        SONAR_SCANNER_CREDENTIALS_ID = 'sonar'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean install -DskipTests'
            }
        }

        stage('SonarQube Scan') {
            when {
                expression { return params.RUN_SONAR_SCAN }
            }
            steps {
                withCredentials([string(credentialsId: "${SONAR_SCANNER_CREDENTIALS_ID}", variable: 'SONAR_AUTH_TOKEN')]) {
                    withSonarQubeEnv("${SONARQUBE_ENV}") {
                       sh """
    sonar-scanner \
    -Dsonar.projectKey=spring-petclinic \
    -Dsonar.host.url=https://3.83.172.83:9000 \   
    -Dsonar.login=${SONAR_AUTH_TOKEN}
"""
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t ${IMAGE_NAME} .'
            }
        }

        stage('Authenticate and Push to AWS ECR') {
            steps {
                script {
                    withCredentials([aws(credentialsId: AWS_CREDENTIALS_ID)]) {
                        sh "aws ecr get-login-password --region ${AWS_REGION} | docker login --username AWS --password-stdin ${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com"
                        sh "docker tag ${IMAGE_NAME}:latest ${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/${ECR_REPO_NAME}:1.0.0"
                        sh "docker push ${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/${ECR_REPO_NAME}:1.0.0"
                    }
                }
            }
        }
    }
}
